function animateToArrow(){
   svg.unpauseAnimations();
  for(c=0; c < toArrow.length; c++) {
    toArrow[c].beginElement();    
  }
}

function animateToMenu(){
  svg.unpauseAnimations();
  for(c=0; c < toArrow.length; c++) {
    fromArrow[c].beginElement();    
  }
}


